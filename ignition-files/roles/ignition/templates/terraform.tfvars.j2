// This file is populated by Ansible playbook that runs prior to terraform.

// AWS
vpc_cidr                    = "{{ VpcCidr }}"
region                      = "{{ region }}"
hosted_zone_id              = "{{ HostedZoneId }}"
hosted_zone_name            = "{{ base_domain }}"

// Cluster-specific
infra_name                  = "{{ InfrastructureName }}"
cluster_name                = "{{ cluster_name }}"


// Machine details
aws_rhos_ami                = "{{ aws_rhos_ami }}"
aws_machine_arch            = "{{ aws_machine_arch }}"
bootstrap_ec2_instance_type = "{{ bootstrap_ec2_instance_type }}"
master_ec2_instance_type    = "{{ master_ec2_instance_type }}"
worker_ec2_instance_type    = "{{ worker_ec2_instance_type }}"
ec2_key_pair                = "{{ ec2_key_pair }}"

// Bootstrap Ignition file location
bootstrap_ignition_location = "{{ bootstrap_ignition_location }}"



// Cluster subnets per availability zone

// az a
a = { 
      priv_cidr         = "{{ za_private_subnet_cidr }}" , 
      pub_cidr          = "{{ za_public_subnet_cidr }}" , 
      az_name           = "{{ az_a_name }}",
      master_priv_ip    = "{{ za_master_priv_ip }}",
      worker_priv_ip    = "{{ za_worker_priv_ip }}",
      bootstrap_priv_ip = "{{ bootstrap_priv_ip }}"
    }

// az b
b = { 
      priv_cidr         = "{{ zb_private_subnet_cidr }}" ,
      pub_cidr          = "{{ zb_public_subnet_cidr }}" , 
      az_name           = "{{ az_b_name }}",
      master_priv_ip    = "{{ zb_master_priv_ip }}",
      worker_priv_ip    = "{{ zb_worker_priv_ip }}" 
    }

// az c
c = { 
      priv_cidr         = "{{ zc_private_subnet_cidr }}" , 
      pub_cidr          = "{{ zc_public_subnet_cidr }}" , 
      az_name           = "{{ az_c_name }}",
      master_priv_ip    = "{{ zc_master_priv_ip }}",
      worker_priv_ip    = "{{ zc_worker_priv_ip }}"  
    }


